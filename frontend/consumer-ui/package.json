{
  "author": "info@softozor.ch",
  "cypress-cucumber-preprocessor": {
    "nonGlobalStepDefinitions": true
  },
  "dependencies": {
    "@nuxtjs/apollo": "^4.0.0-rc2.3",
    "apollo-cache-inmemory": "^1.6.3",
    "core-js": "^2.6.5",
    "cross-env": "^6.0.3",
    "graphql-tag": "^2.10.1",
    "leaflet": "^1.6.0",
    "leaflet-gesture-handling": "^1.1.8",
    "nuxt": "^2.10.2",
    "tailwindcss": "^1.1.4",
    "vue-client-only": "^2.0.0",
    "vue-loading-overlay": "^3.2.0",
    "vue2-leaflet": "^2.2.1"
  },
  "description": "Shopozor consumer ui",
  "jest-junit": {
    "outputDirectory": "./test-reports",
    "outputName": "unit-test-report.xml"
  },
  "lint-staged": {
    "*.js|*.vue": "yarn lint --fix"
  },
  "name": "consumer-ui",
  "private": true,
  "scripts": {
    "build": "nuxt build",
    "build-storybook": "build-storybook",
    "concurrently:dev:jest": "concurrently \"nuxt\" \"jest --watch\"",
    "cypress:e2e": "wait-on http://localhost:3000 && cross-env CYPRESS_baseUrl=http://localhost:3000/# cypress run --env configFile=e2e",
    "cypress:e2e:ci": "cross-env CYPRESS_baseUrl=http://consumer-ui:3000/# cypress run --env configFile=e2e",
    "cypress:integration": "wait-on http://localhost:3000 && cross-env CYPRESS_baseUrl=http://localhost:3000/# cypress run --env configFile=integration",
    "cypress:integration:ci": "cross-env CYPRESS_baseUrl=http://consumer-ui:3000/# cypress run --env configFile=integration",
    "cypress:open": "cross-env CYPRESS_baseUrl=http://localhost:3000/# cypress open",
    "cypress:open:dev": "cross-env CYPRESS_baseUrl=http://localhost:3000/# NODE_ENV=development cypress open",
    "generate": "nuxt generate",
    "lint": "eslint --ext .js,.vue .",
    "start": "nuxt start",
    "start:dev": "nuxt",
    "start:e2e": "concurrently \"yarn cypress:e2e\" --kill-others \"yarn start\" --success first",
    "start:integration": "concurrently \"yarn cypress:integration\" --kill-others \"yarn start\" --success first",
    "start:integration:dev": "concurrently \"yarn cypress:integration:dev\" --kill-others \"yarn start:dev\" --success first",
    "storybook": "start-storybook -p 6006",
    "test": "echo \"See package.json => scripts for available tests.\" && exit 0",
    "test:unit": "jest",
    "test:unit:ci": "jest --ci --reporters=default --reporters=jest-junit",
    "test:unit:coverage": "jest --coverage",
    "test:unit:ui": "majestic --port 3001",
    "test:unit:watch": "jest --watch",
    "test:unit:watchAll": "jest --watchAll"
  },
  "version": "0.0.0"
}
